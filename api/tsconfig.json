{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": false,
    "skipLibCheck": true,

    "allowJs": true,
    "checkJs": false,

    "baseUrl": ".",
    "paths": {
      "@api/*": ["./*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["./**/*", "../shared/**/*"]
}
