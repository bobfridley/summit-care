{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,

    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,

    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "node"],

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "src/components",
    "src/pages",
    "src/main.tsx",
    "src/App.tsx",
    "src/components/**/*.tsx",
    "src/**/*.css",
    "shared",
    "types",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "src/api",
    "src/db",
    "scripts",
    "drizzle",
    "node_modules",
    "dist",
    ".next",
    ".vercel",
    "build"
  ]
}
